<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingge.mapper.LinkMapper">
    <select id="selectLinks" resultType="com.mingge.domain.vo.LinkListVo">
        SELECT address,description,id,`name`,`status`,logo
        FROM mg_link
        WHERE del_flag = 0
          <if test="name != null and name != ''">
              AND `name` LIKE CONCAT('%',#{name},'%')
          </if>
          <if test="status != null and status != ''">
              AND `status` = #{status}
          </if>
    </select>
</mapper>