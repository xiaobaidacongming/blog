<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingge.mapper.ArticleMapper">
    <update id="updateViewCountByIdAfter">
    <foreach collection="articleList" item="article" separator=";">
        UPDATE mg_article SET view_count=#{article.viewCount} WHERE id= #{article.id} AND del_flag=0
    </foreach>
    </update>
</mapper>